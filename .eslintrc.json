{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-typescript/base", "prettier", "node"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"plugins": ["@typescript-eslint", "prettier"],
	"ignorePatterns": "dist/",
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto",
				"tabWidth": 4,
				"singleQuote": true,
				"useTabs": true,
				"printWidth": 2000
			}
		],
		"no-unused-vars": "warn",
		"no-console": "off",
		"global-require": "off",
		"no-restricted-syntax": "off",
		"consistent-return": "off",
		"indent": "off",
		"import/no-extraneous-dependencies": "off",

		"import/no-dynamic-require": "off",
		"import/named": "off",
		"import/namespace": "off",
		"import/default": "off",
		"import/no-named-as-default-member": "off"

	}
}
